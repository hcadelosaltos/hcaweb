---
import { mainNav } from "../data/nav";
const currentPath = Astro.url.pathname; 

---

<div class="bg-primary w-[80%] mx-auto flex items-center justify-between py-5 px-10 rounded-full fixed left-0 right-0 top-10" >
    <a href="/"><img src="/src/assets/logo.svg" alt="logo" class="h-25"></a>
    <ul class="flex items-center justify-between gap-10">
        {
            mainNav.map(item => {
                const {href, label} = item

                return (
                    <li class={'font-base hover:text-tertiary ' +  (currentPath === href ? 'text-tertiary' : 'text-white')}>
                        <a href={href}>{label}</a>
                    </li>
                )
            } )
        }
        
    </ul>
</div>
