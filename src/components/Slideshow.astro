---
import consultorio from '../assets/slideshow1.jpg';
import farmacia from '../assets/slideshow2.jpg';
import laboratorio from '../assets/slideshow3.jpg';

const items = [
  {
    title: 'Consultorios',
    description: ' Médico General, Psicologo, Nutriologo, Fisioterapia',
    image: '/src/assets/slideshow1.jpg',
  },
  {
    title: 'Farmacia',
    description: 'Descripción del item 2',
    image: '/src/assets/slideshow2.jpg',
  },
  {
    title: 'Laboratorio',
    description: 'Descripción del item 3',
    image: '/src/assets/slideshow3.jpg',
  },
];
---

<div class="flex w-full h-[400px] overflow-hidden group/slideshow gap-4">
  {
    items.map((item, i) => (
      <div
        class={`
          transition-all duration-1000 ease-in-out
          flex items-end justify-center text-2xl font-bold text-white p-8
          group-hover/slideshow:w-[25%]
          hover:w-[50%]
          ${i === 0 ? 'w-[50%]' : 'w-[25%]'}
          h-full
          rounded-xl
          overflow-hidden
          bg-no-repeat
          bg-cover
          bg-center
          group/item
          relative
        `}
        style={`background-image: url('${item.image}')`}
      >
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent rounded-xl" />
        <div class="flex flex-col gap-2 text-center relative z-10">
          <h3 class="text-4xl font-title text-white">{item.title}</h3>
          <p
            class={`text-sm text-white transition-opacity duration-1000 ${
              i === 0
                ? 'opacity-100 group-hover/slideshow:opacity-0 group-hover/item:!opacity-100'
                : 'opacity-0 group-hover/item:opacity-100'
            }`}
          >
            {item.description}
          </p>
        </div>
      </div>
    ))
  }
</div>
