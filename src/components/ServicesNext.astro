---
import { Image } from 'astro:assets';
import icon1 from '../assets/icon1.png';
import icon2 from '../assets/icon2.png';
import icon3 from '../assets/icon3.png';
import icon4 from '../assets/icon4.png';

const services = [
  {
    icon: icon1,
    description: 'Clínica de curación de heridas',
  },
  {
    icon: icon2,
    description: 'Imagenología',
  },
  {
    icon: icon3,
    description: 'Banco de Sangre',
  },
  {
    icon: icon4,
    description: 'Clínica especializada en corta estancia',
  },
];
---

<section class="container mx-auto p-10">
  <h2 class="text-center font-title font-bold text-4xl text-secondary">
    Servicios Próximamente
  </h2>
  <p class="text-center font-bold text-xl">Estamos creciendo para ti</p>
  <div
    class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 items-center px-4 md:px-16 lg:px-64"
  >
    {
      services.map((service) => {
        return (
          <div class="bg-white p-10 rounded-xl flex flex-col items-center gap-4 h-85">
            <div class="bg-tertiary rounded-full w-40 h-40 flex items-center justify-center">
              <Image
                src={service.icon}
                alt={service.description}
                width={100}
                height={100}
              />
            </div>

            <p class="text-center font-bold">{service.description}</p>
          </div>
        );
      })
    }
  </div>
</section>
