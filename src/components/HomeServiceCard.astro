---
import Button from './Button.astro';

const { title, description, image, label, href, alt } = Astro.props;
---

<div
  class="bg-white shadow-xl p-10 flex flex-col items-center justify-center gap-3 rounded-xl text-center min-h-[450px] flex-1"
>
  <img src={image} alt={alt} class="w-48" />
  <p class="text-xl font-bold">{title}</p>
  <p>{description}</p>
  <Button href={href} label={label} />
</div>
